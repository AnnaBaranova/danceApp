<%- include('../partials/header') %>

    <div class="container">
        <form action="/events/<%=event._id%>?_method=PUT" id="edit-form" method="POST">
            <div class="row">
                <div class="input-field col s8">
                    <label>Title:</label>
                    <input class="validate" placeholder="don't start with space :)" type="text" name="title" required
                        pattern="\w+.*" value="<%= event.title %>">
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label>Details:</label>
                    <input type="text" name="details" value="<%= event.details %>">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label>Limit of Guests:</label>
                    <input class="validate" min="2" type="number" name="guestLimit" value="<%= event.guestLimit %>">
                    <span class="helper-text" data-error="wrong! At least 2 people" data-success="right">"at least 2
                        people"</span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label>Date:</label>
                    <br>
                    <br>
                    <input min="<%= new Date(new Date().setDate(new Date().getDate() + 1)).toISOString().slice(0, 16)%>"
                        max="<%= new Date(new Date().setMonth(new Date().getMonth() + 3)).toISOString().slice(0, 16)%>"
                        type="datetime-local" name="date" value="<%= event.date.toISOString().slice(0, 16) %>">
                    <span class="helper-text" data-error="wrong" data-success="right">"Choose at least 1 day from now
                        and not more than 90 days"</span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <label>Place:</label>
                    <input type="text" name="place" value="<%= event.place %>">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <button class="btn-floating btn-large waves-effect waves-light red" type="submit"><i
                            class="material-icons">send</i></button>
                </div>
            </div>
        </form>
    </div>

    <%- include('../partials/footer') %>